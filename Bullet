using UnityEngine;

public class Bullet : MonoBehaviour
{
    public int damage = 10; // 총알 피해
    public float speed = 10f; // 총알 속도
    public Vector2 direction; // 총알 발사 방향
    private float lifetime = 5f; // 총알 생명 시간 (5초 후 총알 삭제)

    public GameObject shooter; // 총알을 발사한 객체 (플레이어 또는 적)

    private void Start()
    {
        // 총알의 방향이 지정되지 않으면 기본적으로 오른쪽 방향으로 설정
        if (direction == Vector2.zero)
        {
            direction = Vector2.right;
        }

        // 총알이 날아갈 방향으로 이동 시작
        Invoke("DestroyBullet", lifetime); // 일정 시간이 지나면 총알 삭제
    }

    private void Update()
    {
        // 물리엔진을 사용하지 않고 수동으로 총알 이동
        transform.Translate(direction * speed * Time.deltaTime);
    }

    // 총알이 일정 시간이 지나면 삭제
    void DestroyBullet()
    {
        Destroy(gameObject);
    }

    // 충돌 처리 (충돌 시 총알이 사라지고 피해를 입힘)
    void OnCollisionEnter2D(Collision2D collision)
    {
        // 총알을 발사한 객체와 충돌하는지 확인
        if (collision.gameObject == shooter)
        {
            // 자기 자신과 충돌하면 피해를 주지 않고 총알을 파괴
            Destroy(gameObject);
            return;
        }

        // 적과 충돌했을 때 적의 체력 감소
        if (collision.gameObject.CompareTag("Enemy"))
        {
            EnemyHealth enemyHealth = collision.gameObject.GetComponent<EnemyHealth>();
            if (enemyHealth != null)
            {
                enemyHealth.TakeDamage(damage); // 적 체력 감소
            }

            // 총알이 적과 충돌했으므로 총알을 파괴
            Destroy(gameObject);
        }

        // 플레이어와 충돌한 경우
        if (collision.gameObject.CompareTag("Player"))
        {
            PlayerHealth playerHealth = collision.gameObject.GetComponent<PlayerHealth>();
            if (playerHealth != null)
            {
                playerHealth.TakeDamage(damage); // 플레이어 체력 감소
            }

            // 총알이 플레이어와 충돌했으므로 총알을 파괴
            Destroy(gameObject);
        }
    }
}
