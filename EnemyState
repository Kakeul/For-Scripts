using UnityEngine;

public enum EnemyStateType  // enum 이름 변경
{
    Idle,
    Moving,
    Jumping,
    Attacking
}

public class EnemyState : MonoBehaviour
{
    private EnemyStateType currentState;  // enum 타입도 변경된 이름 사용

    void Update()
    {
        switch (currentState)
        {
            case EnemyStateType.Idle:
                // 대기 상태
                break;
            case EnemyStateType.Moving:
                // 이동 상태
                break;
            case EnemyStateType.Jumping:
                // 점프 상태
                break;
            case EnemyStateType.Attacking:
                // 공격 상태
                break;
        }
    }
}
